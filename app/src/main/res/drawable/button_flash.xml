<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/colorTransparent"/>
            <item android:drawable="@drawable/ic_flash_off_white_24px" android:gravity="center" android:top="20dp" android:bottom="20dp" android:right="20dp" android:left="20sp"/>
        </layer-list>
    </item>

    <item android:state_checked="true" android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/colorSemiTransparent"/>
            <item android:drawable="@drawable/ic_flash_off_white_24px" android:gravity="center" android:top="20dp" android:bottom="20dp" android:right="20dp" android:left="20sp"/>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/colorSemiTransparent"/>
            <item android:drawable="@drawable/ic_flash_auto_black_24dp" android:gravity="center" android:top="20dp" android:bottom="20dp" android:right="20dp" android:left="20sp"/>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:drawable="@drawable/colorTransparent"/>
            <item android:drawable="@drawable/ic_flash_auto_black_24dp" android:gravity="center" android:top="20dp" android:bottom="20dp" android:right="20dp" android:left="20sp"/>
        </layer-list>
    </item>
</selector>